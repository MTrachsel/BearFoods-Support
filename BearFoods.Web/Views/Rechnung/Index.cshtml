@model BearFoods.BL.RechnungData

@{
    ViewData["Title"] = "Rechnung";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rechnung erstellen</h2>

<hr />
<div class="row">    
    <form asp-action="CreateRechnung">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kunde" class="control-label"></label>
                <input asp-for="Kunde" class="form-control" />
                <span asp-validation-for="Kunde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdressZeile1" class="control-label"></label>
                <input asp-for="AdressZeile1" class="form-control" />
                <span asp-validation-for="AdressZeile1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdressZeile2" class="control-label"></label>
                <input asp-for="AdressZeile2" class="form-control" />
                <span asp-validation-for="AdressZeile2" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="RechnungsNummer" class="control-label"></label>
                <input asp-for="RechnungsNummer" class="form-control" />
                <span asp-validation-for="RechnungsNummer" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RechnungsDatum" class="control-label"></label>
                <input asp-for="RechnungsDatum" class="form-control" />
                <span asp-validation-for="RechnungsDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LieferDatum" class="control-label"></label>
                <input asp-for="LieferDatum" class="form-control" />
                <span asp-validation-for="LieferDatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MengeBBQ" class="control-label"></label>
                <input asp-for="MengeBBQ" class="form-control" placeholder="Anzahl" />
                <span asp-validation-for="MengeBBQ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MengePizza" class="control-label"></label>
                <input asp-for="MengePizza" class="form-control" placeholder="Anzahl" />
                <span asp-validation-for="MengePizza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MengeJus" class="control-label"></label>
                <input asp-for="MengeJus" class="form-control" placeholder="Anzahl" />
                <span asp-validation-for="MengeJus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-default" />
            </div>
        </div>
    </form>
    </div>
